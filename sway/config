#    sheerio sway config     #
### Variables

# Logo key. Mod4 for SUPER
set $mod Mod4
# Mod 1 = Alt key
set $meta Mod1

# Set Tilix as default terminator
set $term tilix

# run X11 apps
xwayland enable

# Font
font pango: Liberation Mono 10


# TODO: waarom werkt dit niet?
# Floating dialogs and other stuff
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_role="About"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [class="Ulauncher"] floating enable border pixel 0
for_window [class="keepassxc"] floating enable 
for_window [class="rednotebook"] floating enable

# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg /home/sheerio/Pictures/ghost_in_the_shell_wallpaper_BEST_ONE.png fit

### Idle configuration
exec swayidle -w \
        timeout 7200 'swaylock -f -c 000000' \
        timeout 14400 'swaymsg "output * dpms off"' \
        resume 'swaymsg "output * dpms on"' \
        before-sleep 'swaylock -f -c /home/sheerio/dotfiles/swaylock/config'

### Input configuration
input type:touchpad {
    accel_profile adaptive
    dwt enabled
    pointer_accel 0.85
    tap disabled
    scroll_factor 2
# deze zijn nieuw
    click_method button_areas
    natural_scroll disabled
    scroll_method two_finger
}

input type:keyboard {
    xkb_numlock enabled
}
### Monitor output configuration wit HDMI
 output DP-1 pos 3840 0
 output eDP-1 pos 0 0


### Key bindings

# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+q kill

# Start your launcher
bindsym $mod+d exec $menu

    # Drag 9floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
#

# Use VIM keybindings
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move windows around within workplace
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# move left and right with arrow keys
bindsym $meta+control+Left workspace prev 
bindsym $meta+control+Right workspace next

# wob config
exec mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob

# Media keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +2% > $SWAYSOCK.wob 
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -2% > $SWAYSOCK.wob 
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle > $SWAYSOCK.wob 
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym XF86MonBrightnessDown exec brightnessctl set 2%- && ( echo $((`brightnessctl get` * 100 / `brightnessctl m`)) > $SWAYSOCK.wob )
bindsym XF86MonBrightnessUp exec brightnessctl set +2% && ( echo $((`brightnessctl get` * 100 / `brightnessctl m`)) > $SWAYSOCK.wob )


# Manual Lock
bindsym --release $mod+g exec swaylock -f -i /home/sheerio/Pictures/ghost_in_the_shell_3faces.jpeg

# Auto lock and screen off
set $locker 'swaylock -f -i /home/sheerio/Pictures/ghost_in_the_shell_3faces.jpeg'
exec swayidle -w \
    timeout 300 $locker \
    timeout 900 'swaymsg "output * dpms off"' \
    timeout 15 'if pgrep -x swaylock; then swaymsg "output * dpms off"; fi' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep $locker

# Workspaces:
# Switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+minus workspace 11
bindsym $mod+equal workspace 12
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10
bindsym $mod+Shift+minus move container to workspace 11
bindsym $mod+Shift+equal move container to workspace 12


bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth


# Launch apps in certain workspaces
assign [class="^Spotify"] workspace 12

# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+f exec notify-send "Horizontal split", splith
    bindsym $mod+x exec notify-send "Changing split mode", split toggle
    bindsym $mod+v exec notify-send "Vertical split", splitv
# split mode toggle between horizontal and vertical (status displayed in bar)
    # Switch the current container between different layout styles
    bindsym $mod+s layout stacking
    bindsym $mod+w layout tabbed
    bindsym $mod+e layout toggle split

# toggle between tiling and floating
bindsym $meta+shift+f floating toggle

# fullscreen
bindsym $meta+f fullscreen toggle global


    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $meta+Shift+z move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $meta+z scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height

    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bindsym Shift+$meta+Left        resize shrink width 70 px
bindsym Shift+$meta+Right       resize grow width 70 px
bindsym Shift+$meta+Down          resize shrink height 40 px
bindsym Shift+$meta+Up        resize grow height 40 px

bindsym Shift+$meta+h        resize shrink width 70 px
bindsym Shift+$meta+l       resize grow width 70 px
bindsym Shift+$meta+j          resize shrink height 40 px
bindsym Shift+$meta+k       resize grow height 40 px

# Resize in percent
bindsym $meta+j resize set width 95 ppt
bindsym $meta+k resize set width 50 ppt
bindsym $meta+l resize set width 40 ppt


# New window only 33% size
for_window [class=".*"] resize set width 33 ppt

# Screenshots
bindsym Mod4+Ctrl+p  exec ~/bin/grimshot --notify save window clipboard
bindsym Mod4+Mod1+p  exec ~/bin/grimshot --notify save output
bindsym Mod4+Shift+p exec ~/bin/grimshot --notify save area 
bindsym Mod4+p       exec ~/bin/grimshot --notify save active  

# Ulauncher
set $menu ulauncher-toggle

### Spotify Music
bindsym $mod+m exec swaymsg exec flatpak run com.spotify.Client
### Obsidian
bindsym $mod+i exec swaymsg exec flatpak md.obsidian.Obsidian

# Nautilus
bindsym $mod+n exec /usr/bin/nautilus


# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
# bar {
#     position top

#     font pango: Liberation Mono 10                                                                    #     # When the status_command prints a new line to stdout, swaybar updates.
#     # The default just shows the current date and time.
#     status_command /usr/bin/i3status-rs /home/sheerio/.config/i3status/i3status.toml
#     colors {
#         separator #666666
#         background #222222
#         statusline #dddddd
#         focused_workspace #0088CC #5ec986 #ffffff
# #        focused_workspace #0088CC #0088CC #ffffff
#         active_workspace #333333 #333333 #ffffff
#         inactive_workspace #333333 #333333 #888888
#         urgent_workspace #2f343a #900000 #ffffff
#     }
# }


#######
#THEME#
#######

# set primary gruvbox colorscheme colors
set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $white #ffffff
    font pango: Liberation Mono 10     

#start of window title bars & borders section

#start of bar section
bar {
    position top
    status_command /usr/bin/i3status-rs /home/sheerio/.config/i3status/i3status.toml
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $yellow
        # workspaces section            
        #                    border  backgr. text
        focused_workspace    $aqua $aqua $darkgray
        inactive_workspace   $darkgray $darkgray $yellow
        active_workspace     $darkgray $darkgray $yellow
        urgent_workspace     $red $red $bg
    }
}
#end of bar section


# green gruvbox
# class                 border|backgr|text|indicator|child_border
client.focused          $blue $darkgray $yellow $yellow $blue
client.focused_inactive $darkgray $darkgray $aqua $gray $darkgray
client.unfocused        $darkgray $darkgray $aqua $green $darkgray
client.urgent           $red $red $white $red $red


#end of window title bars & borders section


